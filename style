<script>
  const hero = document.getElementById('hero');
  const images = [
    'Mars.png',
    'Solar%20system.png',
    'Titan.png',
    'venus.png',
    'mars_road.jpg',
    'mars_rover.jpg',
    'Ryugu.png',
    'enceledas.png'
  ];
  let current = 0;

  function changeBackground() {
    hero.classList.remove('fade-in');
    hero.classList.add('fade-out');

    setTimeout(() => {
      hero.style.backgroundImage = `linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('${images[current]}')`;
      hero.classList.remove('fade-out');
      hero.classList.add('fade-in');
      current = (current + 1) % images.length;
    }, 1000);
  }

  changeBackground();
  setInterval(changeBackground, 5000);
</script>

